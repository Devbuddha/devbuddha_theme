{%
  set classes = [
    'testimonial',
    'about-testimonial',
    'home-testimonial',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <blockquote{{ attributes.addClass(classes) }}>
  <div class="container">
    {% block content %}
      {{ content }}
    {% endblock %}
      </div>
    </blockquote>
{% endblock paragraph %}

